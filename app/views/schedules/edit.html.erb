<div class="main schedules-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/schedules/#{@schedule.id}/update") do %>
    <div class="form">
      <div class="form-body">
          <% @schedule.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        <%= date_field_tag name="date",value=@schedule.date %>
        <textarea name="content"><%= @schedule.content %></textarea>
        <%= number_field_tag name="money",value=@schedule.money %>
        <input type="submit" value="保存">
      </div>
    </div>
   <% end %> 
  </div>
</div>